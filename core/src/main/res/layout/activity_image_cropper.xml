<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_cropper_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_image_cropper_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="?colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="ContentDescription">

            <Button
                android:id="@+id/image_cropper_toolbar_save"
                style="@style/Button.BorderlessBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/image_cropper_button_save"
                android:textColor="?colorToolbarForeground" />

            <Button
                android:id="@+id/image_cropper_toolbar_discard"
                style="@style/Button.BorderlessBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/image_cropper_button_discard"
                android:textColor="?colorToolbarForeground" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/image_cropper_toolbar_rotate_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_rotate_left"
                android:tint="?colorToolbarForeground" />

            <ImageButton
                android:id="@+id/image_cropper_toolbar_rotate_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="?android:selectableItemBackground"

                android:src="@drawable/ic_rotate_right"
                android:tint="?colorToolbarForeground" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/image_cropper_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>